extends ../includes/layout_bici

block content
  
  div.container
    a.btn.btn-success(href='/usuarios/create') Nuevo Usuario

    br
    br
    br

    table.table
      thead
        tr
          th(scope='col') #
          th(scope='col') Nombre
          th(scope='col') Email
          th(scope='col') Verificado
          th(scope='col') 
          th(scope='col') 
      tbody
        each usuario, index in usuarios
          tr
            td(scope='row')
              = index
            td= usuario.nombre
            td= usuario.email
            td= usuario.verificado ? 'SI' : 'NO'
            td 
              a.btn.btn-primary(href= `usuarios/${usuario.id}/update`) Editar
            td
              form.inline(method='post' action=`usuarios/${usuario.id}/delete`)
                input(type='hidden' name='id' value=usuario.id)
                button.btn.btn-danger(type='submit' name='submit_param' value=usuario.id) Eliminar